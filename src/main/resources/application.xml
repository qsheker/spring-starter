<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user1" name="John,Doe,john@email.com" class="com.example.demo.pojo.User">
        <property name="lastName" value="Doe"/>
        <property name="firstName" value="John"/>
        <property name="email" value="john@email.com"/>
    </bean>

    <bean id="userRepository" class = "com.example.demo.repositories.UserRepository"/>

    <bean id="userService" class = "com.example.demo.services.UserService" factory-method="of">
        <constructor-arg ref = "userRepository"></constructor-arg>
    </bean>




</beans>